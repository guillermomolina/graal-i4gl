{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "antlr-debug",
            "name": "Debug ANTLR4 grammar Current File",
            "request": "launch",
            "input": "${file}",
            "grammar": "parser/src/main/antlr4/i4gl/parser/I4GLParser.g4",
            "startRule": "module",
            "printParseTree": true,
            "visualParseTree": true
        },
        {
            "type": "java",
            "name": "Debug (Launch) Current File",
            "request": "launch",
            "mainClass": "i4gl.Launcher",
            "projectName": "launcher",
            "args": ["--log.i4gl.level=FINEST","${file}"],
            "vmArgs": [
                "-ea",
                "-Dtruffle.class.path.append=./language/target/language.jar:/opt/squirrel-sql/squirrel-sql.jar",
                "-Dsquirrel.home=/opt/squirrel-sql"
            ],
            "stepFilters": {
                "skipClasses": [
                    "$JDK",
                    "junit.*"
                ],
                "skipSynthetics": true,
                "skipStaticInitializers": true,
                "skipConstructors": false
            },
            "console": "internalConsole"
        },
        {
            "type": "java",
            "name": "Debug (Launch and Wait) Current File",
            "request": "launch",
            "mainClass": "i4gl.Launcher",
            "projectName": "launcher",
            "args": [
                "--inspect",
                "--log.i4gl.level=FINEST",
                "${file}"
            ],
            "vmArgs": [
                "-ea",
                "-Dtruffle.class.path.append=./language/target/language.jar:/opt/squirrel-sql/squirrel-sql.jar",
                "-Dsquirrel.home=/opt/squirrel-sql"
            ],
            "stepFilters": {
                "skipClasses": [
                    "$JDK",
                    "junit.*"
                ],
                "skipSynthetics": true,
                "skipStaticInitializers": true,
                "skipConstructors": false
            },
            "console": "internalConsole"
        },
        {
            "type": "java",
            "name": "Debug (Launch) Cgi.4gl",
            "request": "launch",
            "mainClass": "i4gl.Launcher",
            "projectName": "launcher",
            "args": [
                "--log.i4gl.level=FINEST",
                "${workspaceFolder}/language/tests/simple/Cgi.4gl",
            ],
            "vmArgs": [
                "-ea",
                "-Dtruffle.class.path.append=./language/target/language.jar:/opt/squirrel-sql/squirrel-sql.jar",
                "-Dsquirrel.home=/opt/squirrel-sql"
            ],
            "stepFilters": {
                "skipClasses": [
                    "$JDK",
                    "junit.*"
                ],
                "skipSynthetics": true,
                "skipStaticInitializers": true,
                "skipConstructors": false
            },
            "console": "internalConsole"
        }
    ]
}